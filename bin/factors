#!/usr/bin/env ruby

$LOAD_PATH << File.dirname(__FILE__)

require 'lib/format'
require 'optparse'

single_line = false
delimiter = ', '
delimiter_set = false

option_parser = OptionParser.new do |opts|
  opts.on('-1') do
    single_line = true
    unless delimiter_set
      delimiter = nil
    end
  end

  opts.on('-d', '--delimiter [DELIMITER]') do |delim|
    delimiter = delim
    delimiter_set = true
  end
end

option_parser.parse!

message = '| You must pass a positive number to this script |'
str = Format::bold("+#{'-' * (message.length-2)}+", :white, :red)

if ARGV.count < 1
  puts "\n#{str}"
  puts Format::bold(message, :white, :red)
  puts "#{str}\n\n"
  exit 1
end

param = ARGV.shift

if param =~ /.*\D.*/
  puts "\n#{str}"
  puts Format::bold(message, :white, :red)
  puts "#{str}\n\n"
  exit 1
end

num = param.to_i

if num < 1
  puts "\n#{str}"
  puts Format::bold(message, :white, :red)
  puts "#{str}\n\n"
  exit 1
end

printed = false

(1..(num / 2.0).floor).each do |i|
  if num % i == 0
    if printed
      print delimiter unless delimiter.nil?
      print "\n" if single_line
    end
    printed = true
    print i
  end
end
print "\n"