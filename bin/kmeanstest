#!/usr/bin/env ruby

$LOAD_PATH << File.dirname(__FILE__)

require 'optparse'
require 'lib/maputil'
require 'lib/kmeans'
require 'lib/histogram'
require 'lib/option'

options = {
    do_two: false,
    count:  2500,
    min1:   0,
    max1:   500,
    min2:   600,
    max2:   1000,
    width:  100,
    height: 50,
}

option_parser = OptionParser.new { |opts|
  Option::add_option(options, opts, '-2', '--do-two', :do_two)
  Option::add_option_with_param_and_type(options, opts, '-c', '--count COUNT', :count, Integer)
  Option::add_option_with_param_and_type(options, opts, '-a', '--min-one MIN', :min1, Integer)
  Option::add_option_with_param_and_type(options, opts, '-b', '--max-one MAX', :max1, Integer)
  Option::add_option_with_param_and_type(options, opts, '-d', '--min-two MIN', :min2, Integer)
  Option::add_option_with_param_and_type(options, opts, '-e', '--max-two MAX', :max2, Integer)
  Option::add_option_with_param_and_type(options, opts, '-w', '--width WIDTH', :width, Integer)
  Option::add_option_with_param_and_type(options, opts, '-h', '--height HEIGHT', :height, Integer)
}

option_parser.parse!

def my_rand(min, max)
  (rand(max - min) + min).to_i
end

vals = Array.new(options[:count]) {
  tmp = 0
  12.times { tmp += my_rand(options[:min1], options[:max1]) }
  (tmp - (options[:max1] - options[:min1]) * 3)
}
if options[:do_two]
  vals += Array.new(options[:count]) {
    tmp = 0
    12.times { tmp += my_rand(options[:min2], options[:max2]) }
    tmp - (options[:max2] - options[:min2]) * 3
  }
end

ks = vals.nmeans

lines = vals.histogram(ks, options[:width], options[:height])

lines.each { |line|
  puts line
}