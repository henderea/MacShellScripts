#!/usr/bin/env ruby

#$LOAD_PATH << File.dirname(__FILE__)

require 'optparse'
require 'yaml'
require 'rubygems'
begin
  require 'everyday-cli-utils'
  include EverydayCliUtils
  import :format, :option
rescue Exception => e
  puts e
  puts 'You need to install my everyday-cli-utils gem to use this script.'
  exit 1
end
#require 'lib/format'
#require 'lib/option'

options = {
    exclude_extension: false,
    override_colors:   false,
}

option_parser = OptionParser.new { |opts|
  Option::add_option(options, opts, %w(-e --exclude-extension), :exclude_extension)
  Option::add_option(options, opts, %w(-v --override-colors), :override_colors)
}

option_parser.parse!

color_opts = {
    normal:   {
        fg: :none,
        bg: :none,
    },
    same:     {
        fg: :black,
        bg: :white,
    },
    conflict: {
        fg: :white,
        bg: :red,
    },
}

config_file = File.expand_path('~/mvr-colors.yaml')

if options[:override_colors] && File.exist?(config_file)
  color_opts = YAML::load_file(config_file)
end

pattern = ARGV.shift
if pattern == 'help' || pattern == '--help' || pattern == '-h'
  puts 'NAME'.format_bold
  puts "    #{'mvr'.format_bold_fg_purple} -- Renames a group of files and/or folders using a regular expression\n\n"
  puts 'SYNOPSIS'.format_bold
  puts "    #{'mvr'.format_bold_fg_purple} <#{'find'.format_underline_fg_cyan}> <#{'replace'.format_underline_fg_cyan}> #{'file ...'.format_fg_cyan}\n\n"
  puts 'DESCRIPTION'.format_bold
  puts "    #{'mvr'.format_bold_fg_purple} is a Ruby script that allows you to rename a group of files and/or folders using a regular expression."
  puts "    The #{'find'.format_underline_fg_cyan} parameter uses normal regular expression syntax (there might be Ruby-specific things, but I doubt it)."
  puts "    The #{'replace'.format_underline_fg_cyan} parameter is plain text, using #{'\\#'.format_fg_green} to insert capture group #{'#'.format_fg_green} (so #{'\\1'.format_fg_green} to insert the first capture group)."
  puts '    The list of files can be as many items as you want, and you can use typical wildcard expressions.'
  puts "    Any parameter after #{'replace'.format_underline_fg_cyan} will be interpreted as a file/folder name that should be included in the list of what to rename.\n\n"
  puts '    Parameters:'
  puts "    <#{'find'.format_underline_fg_cyan}>     The regular expression for the renaming"
  puts "    <#{'replace'.format_underline_fg_cyan}>  The text to replace what the regular expression matches (use #{'\\#'.format_fg_green} to insert capture group #{'#'.format_fg_green} (so #{'\\1'.format_fg_green} to insert the first capture group))"
  puts "    #{'file ...'.format_fg_cyan}   The list of files and/or folders to rename"
  exit
end
if ARGV.length < 2
  puts "\n#{'Usage'.format_bold_underline}: #{'mvr'.format_bold_fg_purple} <#{'find'.format_underline_fg_cyan}> <#{'replace'.format_underline_fg_cyan}> #{'file ...'.format_fg_cyan}\n\n"
  puts "Run #{'mvr'.format_bold_fg_purple} #{'help'.format_bold_fg_cyan} for command information.  There is also a man page that should be accessible via #{'man'.format_bold_fg_purple} #{'mvr'.format_bold_fg_cyan}\n\n"
  exit
end
replacement = ARGV.shift
regex       = /#{pattern}/o
mappings    = Hash.new
encountered = Array.new
duplicated  = Array.new
ARGV.each do |filename|
  file_basename = File.basename(filename)
  directory     = filename[0, (filename.length - file_basename.length)]
  file_ext      = File.extname(file_basename)
  if options[:exclude_extension] && file_ext.length > 0
    file_basename2       = file_basename[0...-file_ext.length]
    replacement_basename = file_basename2.gsub(regex, replacement)
    replacement_name     = "#{directory}#{replacement_basename}#{file_ext}"
  else
    replacement_basename = file_basename.gsub(regex, replacement)
    replacement_name     = "#{directory}#{replacement_basename}"
  end
  mappings[filename] = replacement_name
  if encountered.include?(replacement_name)
    unless duplicated.include?(replacement_name)
      duplicated << replacement_name
    end
  else
    encountered << replacement_name
  end
end

ARGV.clear

len1 = mappings.keys.max do |a, b|
  a.length <=> b.length
end

len2 = mappings.values.max do |a, b|
  a.length <=> b.length
end

len1 = len1.length
len2 = len2.length

if len1 < 3
  len1 = 3
end

if len2 < 3
  len2 = 3
end

border = "+#{'-' * (len1+2)}+#{'-' * (len2+2)}+"

puts border
puts "| #{'Old'.center(len1)} | #{'New'.center(len2)} |"
puts border

mappings.each do |from, to|
  from2 = from.center(len1)
  to2   = to.center(len2)
  if from == to
    from2 = Format::colorize(from2, color_opts[:same][:fg], color_opts[:same][:bg])
    to2   = Format::colorize(to2, color_opts[:same][:fg], color_opts[:same][:bg])
  elsif duplicated.include?(to)
    from2 = Format::colorize(from2, color_opts[:conflict][:fg], color_opts[:conflict][:bg])
    to2   = Format::colorize(to2, color_opts[:conflict][:fg], color_opts[:conflict][:bg])
  else
    from2 = Format::colorize(from2, color_opts[:normal][:fg], color_opts[:normal][:bg])
    to2   = Format::colorize(to2, color_opts[:normal][:fg], color_opts[:normal][:bg])
  end
  puts "| #{from2} | #{to2} |"
end

puts border

print "\nAre you sure you want to rename these files (yes/no or y/n)? "
response = gets.chomp
if response.downcase == 'yes' || response.downcase == 'y'
  mappings.each do |from, to|
    if from != to
      File.rename(from, to)
    end
  end
end
