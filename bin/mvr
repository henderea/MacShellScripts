#!/usr/bin/env ruby

$LOAD_PATH << File.dirname(__FILE__)

require 'optparse'
require 'yaml'
require 'lib/format'
require 'lib/option'

options = {
    exclude_extension: false,
    override_colors:   false,
}

option_parser = OptionParser.new { |opts|
  Option::add_option(options, opts, %w(-e --exclude-extension), :exclude_extension)
  Option::add_option(options, opts, %w(-v --override-colors), :override_colors)
}

option_parser.parse!

color_opts = {
    normal:   {
        fg: :none,
        bg: :none,
    },
    same:     {
        fg: :black,
        bg: :white,
    },
    conflict: {
        fg: :white,
        bg: :red,
    },
}

config_file = File.expand_path('~/mvr-colors.yaml')

if options[:override_colors] && File.exist?(config_file)
  color_opts = YAML::load_file(config_file)
end

pattern = ARGV.shift
if pattern == 'help' || pattern == '--help' || pattern == '-h'
  puts Format::bold('NAME')
  puts "    #{Format::bold('mvr', :purple)} -- Renames a group of files and/or folders using a regular expression\n\n"
  puts Format::bold('SYNOPSIS')
  puts "    #{Format::bold('mvr', :purple)} <#{Format::underline('find', :cyan)}> <#{Format::underline('replace', :cyan)}> #{Format::colorize('file ...', :cyan)}\n\n"
  puts Format::bold('DESCRIPTION')
  puts "    #{Format::bold('mvr', :purple)} is a Ruby script that allows you to rename a group of files and/or folders using a regular expression."
  puts "    The #{Format::underline('find', :cyan)} parameter uses normal regular expression syntax (there might be Ruby-specific things, but I doubt it)."
  puts "    The #{Format::underline('replace', :cyan)} parameter is plain text, using #{Format::colorize('\\#', :green)} to insert capture group #{Format::colorize('#', :green)} (so #{Format::colorize('\\1', :green)} to insert the first capture group)."
  puts '    The list of files can be as many items as you want, and you can use typical wildcard expressions.'
  puts "    Any parameter after #{Format::underline('replace', :cyan)} will be interpreted as a file/folder name that should be included in the list of what to rename.\n\n"
  puts '    Parameters:'
  puts "    <#{Format::underline('find', :cyan)}>     The regular expression for the renaming"
  puts "    <#{Format::underline('replace', :cyan)}>  The text to replace what the regular expression matches (use #{Format::colorize('\\#', :green)} to insert capture group #{Format::colorize('#', :green)} (so #{Format::colorize('\\1', :green)} to insert the first capture group))"
  puts "    #{Format::colorize('file ...', :cyan)}   The list of files and/or folders to rename"
  exit
end
if ARGV.length < 2
  puts "\n#{Format::boldunderline('Usage')}: #{Format::bold('mvr', :purple)} <#{Format::underline('find', :cyan)}> <#{Format::underline('replace', :cyan)}> #{Format::colorize('file ...', :cyan)}\n\n"
  puts "Run #{Format::bold('mvr', :purple)} #{Format::bold('help', :cyan)} for command information.  There is also a man page that should be accessible via #{Format::bold('man', :purple)} #{Format::bold('mvr', :cyan)}\n\n"
  exit
end
replacement = ARGV.shift
regex       = /#{pattern}/o
mappings    = Hash.new
encountered = Array.new
duplicated  = Array.new
ARGV.each do |filename|
  file_basename = File.basename(filename)
  directory     = filename[0, (filename.length - file_basename.length)]
  file_ext      = File.extname(file_basename)
  if options[:exclude_extension] && file_ext.length > 0
    file_basename2       = file_basename[0...-file_ext.length]
    replacement_basename = file_basename2.gsub(regex, replacement)
    replacement_name     = "#{directory}#{replacement_basename}#{file_ext}"
  else
    replacement_basename = file_basename.gsub(regex, replacement)
    replacement_name     = "#{directory}#{replacement_basename}"
  end
  mappings[filename] = replacement_name
  if encountered.include?(replacement_name)
    unless duplicated.include?(replacement_name)
      duplicated << replacement_name
    end
  else
    encountered << replacement_name
  end
end

ARGV.clear

len1 = mappings.keys.max do |a, b|
  a.length <=> b.length
end

len2 = mappings.values.max do |a, b|
  a.length <=> b.length
end

len1 = len1.length
len2 = len2.length

if len1 < 3
  len1 = 3
end

if len2 < 3
  len2 = 3
end

border = "+#{'-' * (len1+2)}+#{'-' * (len2+2)}+"

puts border
puts "| #{'Old'.center(len1)} | #{'New'.center(len2)} |"
puts border

mappings.each do |from, to|
  from2 = from.center(len1)
  to2   = to.center(len2)
  if from == to
    from2 = Format::colorize(from2, color_opts[:same][:fg], color_opts[:same][:bg])
    to2   = Format::colorize(to2, color_opts[:same][:fg], color_opts[:same][:bg])
  elsif duplicated.include?(to)
    from2 = Format::colorize(from2, color_opts[:conflict][:fg], color_opts[:conflict][:bg])
    to2   = Format::colorize(to2, color_opts[:conflict][:fg], color_opts[:conflict][:bg])
  else
    from2 = Format::colorize(from2, color_opts[:normal][:fg], color_opts[:normal][:bg])
    to2   = Format::colorize(to2, color_opts[:normal][:fg], color_opts[:normal][:bg])
  end
  puts "| #{from2} | #{to2} |"
end

puts border

print "\nAre you sure you want to rename these files (yes/no or y/n)? "
response = gets.chomp
if response.downcase == 'yes' || response.downcase == 'y'
  mappings.each do |from, to|
    if from != to
      File.rename(from, to)
    end
  end
end
